<div class="showcase">
    <div id="ads-data">
        <div class="slider">
            {{#each controller}}
            <div class="slide">{{#linkTo 'project' this}}<img src={{unbound image}} />{{/linkTo}}</div>
            {{/each}}
        </div>

        <div class="accordion">
            {{#each controller}}
            <div class="header">{{title}}</div>
            <div class="content">{{description}}</div>
            {{/each}}
        </div>
    </div>

    <div id="slidorion" class="slidorion">
    </div>
</div>