<div class="contact">
	<div class="account-container login stacked">
		<div class="content clearfix">
			<form class="validate" {{action submitForm target="controller" on="submit"}} novalidate>
				<h1>Contact Us</h1>
				<div class="login-fields">
					<div class="field">
						<label for="emailinput">Email Address (not required)</label> 
					    {{
						    view Ember.TextField
						    valueBinding="controller.mailAddress"
						    class="validate[custom[email]]"
						    placeholder="Email Address (Not Required)"
							name="emailinput"
							type="email"
						}}
					</div>
					<div class="field">
						<label for="msginput">Message (required)</label>
					    {{
					    	view Ember.TextArea
					    	valueBinding="controller.mailContent"
					    	class="validate[required]"
					    	placeholder="Enter Message (Required)"
					    	name="msginput"
					    	required="true"
					    	type="text"
					    }}
					</div>
				</div>
				<div class="login-actions">
					{{loading controller isLoadingBinding="isLoading"}}
			    	<button type="submit" class="button btn btn-primary btn-large">
		  				<i class="icon-envelope"></i>
                    	Send
                    </button>
				</div>
				{{status controller messageBinding="statusMessage" isSuccessBinding="isSuccess" isShowBinding="isShowStatus"}}
			</form>
		</div>
	</div>
</div>